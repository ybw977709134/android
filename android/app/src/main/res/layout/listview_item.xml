<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">

    <com.onemeter.swipe.SwipeLayout
        android:id="@+id/swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_menu"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="@color/red"
            android:gravity="center">

            <ImageView
                android:id="@+id/trash"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/trash" />

            <TextView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
        <!--主体item布局 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/item_selector"
            android:padding="6dp">

            <com.onemeter.view.CircleImageView
                android:id="@+id/message_center_look"
                android:layout_width="59dp"
                android:layout_height="58dp"
                android:layout_marginLeft="5dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/head" />

            <TextView
                android:id="@+id/message_center_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/message_center_look"
                android:text="2016的微秀的新模板出来啦！"
                android:textColor="@color/text_cl"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/message_center_detail"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_center_item_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/message_center_look"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="这是一个描述详情的title"
                android:textColor="#737373"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/message_center_item_time"
                android:layout_marginRight="10dp"
                android:layout_marginTop="12dp"
                android:text="点击查看详情"
                android:textColor="#737373"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/message_center_item_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_marginTop="13dp"
                android:text="2016-01-28"
                android:textColor="#737373"
                android:textSize="11sp" />
        </RelativeLayout>
    </com.onemeter.swipe.SwipeLayout>

</LinearLayout>