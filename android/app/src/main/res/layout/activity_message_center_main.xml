<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray_01"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:id="@+id/activity_huodong_setting_title_rel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_Black"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip">

        <ImageButton
            android:id="@+id/activity_message_center_img_return"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:background="@null"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="消息中心"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>
    <com.onemeter.view.XListView
        android:id="@+id/activity_message_center_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.onemeter.view.XListView>
    <ImageView
        android:id="@+id/activity_message_center_empty_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:visibility="gone"
        android:background="@mipmap/zhuangtai"/>
    <TextView
        android:id="@+id/activity_message_center_empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="16sp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:text="暂无提示消息！"/>

</LinearLayout>