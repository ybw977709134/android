<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:background="@color/bg_gray_01"
    android:orientation="vertical">

    <!--标题-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_Black"
        >

        <ImageView
            android:id="@+id/activity_my_folder_img_return"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="1dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="我的管理"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <!--主体部分-->

    <View
        android:id="@+id/user_setting_view_0"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="20dp"
        android:background="@color/bg_view" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_White">



        <RelativeLayout
            android:id="@+id/my_aduio_frequency"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:text="我的音频"
                android:textSize="15sp"
                android:textColor="@color/text_cl"/>


            <ImageView
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/icon_next" />
        </RelativeLayout>
        <View
            android:id="@+id/user_setting_view_1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_below="@+id/my_aduio_frequency"
            android:background="@color/bg_view" />
        <RelativeLayout
            android:id="@+id/my_pic_folder"
            android:layout_below="@+id/user_setting_view_1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:text="我的图片库"
                android:textSize="15sp"
                android:textColor="@color/text_cl"/>



            <ImageView
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:src="@mipmap/icon_next" />
        </RelativeLayout>

        <View
            android:id="@+id/user_setting_view_2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/my_pic_folder"
            android:background="@color/bg_view" />

        <RelativeLayout
            android:id="@+id/my_music_folder"
            android:layout_below="@+id/user_setting_view_2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
           >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingLeft="20dp"
                android:text="我的音乐库"
                android:textColor="@color/text_cl"
                android:textSize="15sp" />



            <ImageView
                android:layout_width="10dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:visibility="visible"
                android:src="@mipmap/icon_next" />
        </RelativeLayout>

        <View
            android:id="@+id/user_setting_view_3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/my_music_folder"
            android:background="@color/bg_view" />



    </RelativeLayout>

</LinearLayout>