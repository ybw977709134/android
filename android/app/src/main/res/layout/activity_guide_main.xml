<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/btn_login_tiaozhuan_rel"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:gravity="center|right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_login_tiaozhuan"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="center|right"
                android:text="跳转"
                android:textColor="#676767"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="@mipmap/icon_next" />

        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewPager_guide"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/bg_Gray" />


        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_login_vishow"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@drawable/btn_bg_style_01"
                android:text="登录vishow"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button_first_look"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="15dp"
                android:layout_weight="1"
                android:background="@drawable/bt_login_style_02"
                android:text="先用看看"
                android:textColor="@color/text_cl" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/hot_ponit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/hot_ponit_1"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@mipmap/hot_no" />

        <ImageView
            android:id="@+id/hot_ponit_2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@mipmap/hot_no" />

        <ImageView
            android:id="@+id/hot_ponit_3"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@mipmap/hot_no" />

        <ImageView
            android:id="@+id/hot_ponit_4"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:src="@mipmap/hot_no" />

    </LinearLayout>

    <Button
        android:id="@+id/button_Immediate_login"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/btn_bg_style"
        android:text="立即体验"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>