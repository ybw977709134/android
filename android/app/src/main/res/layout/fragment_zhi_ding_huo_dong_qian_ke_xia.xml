<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_zhiding_scrollview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_gray_01"
    android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="活动名"
                android:textColor="@color/text_cl"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="浏览数"
                android:textColor="@color/text_cl"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="参加数"
                android:textColor="@color/text_cl"
                android:textSize="15sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="时间" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_gray_01" />

        <com.onemeter.view.XListView
            android:id="@+id/fragment_zhi_ding_xian_xia_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/bg_gray_01"
            android:dividerHeight="10dp" />

        <TextView
            android:id="@+id/btn_more_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查看更多数据"
            android:textColor="@color/bule2"
            android:textSize="14sp"
            android:visibility="invisible" />


</LinearLayout>


