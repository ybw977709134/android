<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--标题-->
    <RelativeLayout
        android:id="@+id/activity_huodong_setting_title_rel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_Black"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip">

        <ImageView
            android:id="@+id/activity_huodong_setting_img_return"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="1dp"
            android:paddingRight="10dp"
            android:paddingTop="1dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="活动设置"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/activity_huodong_setting_title_rel_2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/activity_huodong_setting_title_rel"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_style_02"
        android:gravity="center"
        android:text="修改分享标题和内容"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/activity_huodong_setting_main_rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/activity_huodong_setting_title_rel_2">

        <TextView
            android:id="@+id/activity_huodong_setting_main_title"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="标题:"
            android:textColor="@color/text_cl"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/activity_changjing_setting_main_title"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:layout_toRightOf="@+id/activity_huodong_setting_main_title"
            android:text="欢乐亲子日子"
            android:textColor="@color/text_cl"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/activity_huodong_setting_main_img_layt"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_below="@+id/activity_huodong_setting_main_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/activity_huodong_setting_main_img"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:scaleType="fitXY"
                android:src="@mipmap/cover" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/activity_huodong_setting_main_text_layt"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/activity_huodong_setting_main_title"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/activity_huodong_setting_main_img_layt"
            android:orientation="vertical">

            <TextView
                android:id="@+id/activity_huodong_setting_main_change_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="分享内容:"
                android:textColor="@color/text_cl"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/activity_huodong_setting_main_change_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_huodong_setting_main_change_title"
                android:layout_marginTop="10dp"
                android:maxLines="4"
                android:background="@null"
                android:text="瑞雪覆禾苗，暖阳挂树枝，松柏犹苍翠，腊梅吐新蕊，此景添祥瑞，幸福紧相随，一排迷人景!"
                android:textColor="@color/text_cl"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/activity_huodong_setting_main_change_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_huodong_setting_main_change_text"
                android:layout_marginTop="2dp"
                android:text="2016-02-29"
                android:textColor="@color/text_cl"
                android:textSize="10sp" />

        </RelativeLayout>

        <View
            android:id="@+id/activity_huodong_setting_main_view"
            android:layout_width="wrap_content"
            android:layout_height="0.5dp"
            android:layout_below="@+id/activity_huodong_setting_main_text_layt"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/black"
            android:visibility="invisible" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_below="@+id/activity_huodong_setting_main_view"
            android:background="@drawable/bt_bg_style"
            android:paddingBottom="3dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp">

            <Button
                android:id="@+id/activity_huodong_setting_main_delete_btn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/bg_mobai_item_style"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="删除"
                android:textColor="@color/text_cl"
                android:textSize="14sp" />

            <Button
                android:id="@+id/activity_huodong_setting_main_bianji_btn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bg_mobai_item_style"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="编辑"
                android:textColor="@color/text_cl"
                android:textSize="14sp" />

            <Button
                android:id="@+id/activity_huodong_setting_main_share_and_look_btn"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/bg_mobai_item_style"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="预览并分享"
                android:textColor="@color/text_cl"
                android:textSize="14sp" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>