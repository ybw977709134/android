<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rel_login_title"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_Black"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="登录"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/lin_register_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/activity_login_return_icon"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:paddingBottom="1dp"
                android:paddingRight="10dp"
                android:paddingTop="1dp"
                android:src="@mipmap/return_icon" />

        </LinearLayout>

        <TextView
            android:id="@+id/btn_txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="13dp"
            android:text="注册"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/login_img_logo"
        android:layout_width="110dp"
        android:layout_height="118dp"
        android:layout_below="@+id/rel_login_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@mipmap/logo" />


    <!--用户名-->
    <RelativeLayout
        android:id="@+id/rel_username"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/login_img_logo"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dip">

        <EditText
            android:id="@+id/edt_username"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ed_biankuang_style"
            android:hint="请输入手机号或账号"
            android:paddingBottom="5dp"
            android:paddingLeft="60dp"
            android:paddingTop="5dp"
            android:textColor="@color/bg_Black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/txt_usename"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:src="@mipmap/login_icon_account" />

    </RelativeLayout>
    <!--密码-->
    <RelativeLayout
        android:id="@+id/rel_password"
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/rel_username"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dip">

        <EditText
            android:id="@+id/edt_password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/ed_biankuang_style"
            android:hint="请输入登录密码"
            android:paddingBottom="5dp"
            android:paddingLeft="60dp"
            android:paddingTop="5dp"
            android:inputType="textPassword"
            android:textColor="@color/bg_Black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/txt_password"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:src="@mipmap/login_icon_password" />

    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/rel_password"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dip"
        android:background="@drawable/btn_selector_style_03"
        android:text="登录"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dip">

        <TextView
            android:id="@+id/txt_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@drawable/text_btn_style"
            android:gravity="center"
            android:paddingRight="15dp"
            android:text="注册账号"
            android:textColor="#737373"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txt_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/txt_register"
            android:background="@drawable/text_btn_style"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:text="忘记密码？"
            android:textColor="#737373"
            android:textSize="14sp" />

    </RelativeLayout>


</RelativeLayout>