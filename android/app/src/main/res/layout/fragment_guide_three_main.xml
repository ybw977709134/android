<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/guide_img_three"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@mipmap/guide_img3" />

    <TextView
        android:id="@+id/guide_text_title_03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_img_three"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="爱秀·微相册"
        android:textColor="@color/text_cl"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/guide_text_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_text_title_03"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="一键操作  动态相册  特色主题"
        android:textColor="@color/text_cl"
        android:textSize="18sp" />


</RelativeLayout>