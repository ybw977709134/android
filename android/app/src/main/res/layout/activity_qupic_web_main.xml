<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
                android:background="@color/bg_gray_01"
    android:orientation="vertical">
    <!--标题-->
    <RelativeLayout
        android:id="@+id/activity_qupic_title_rel"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/title_Black"
        android:paddingBottom="10.0dip"
        android:paddingTop="10.0dip">

        <ImageView
            android:id="@+id/activity_qupic_img_return"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingBottom="4dp"
            android:paddingRight="10dp"
            android:paddingTop="4dp"
            android:src="@mipmap/return_icon" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="趣相册"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </RelativeLayout>

    <GridView
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_below="@+id/activity_qupic_title_rel"
        android:id="@+id/quxiangce_moban_gridView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:cacheColorHint="@color/bg_gray_01"
        android:clipChildren="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:horizontalSpacing="5dip"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="5dip" >
    </GridView>

</RelativeLayout>