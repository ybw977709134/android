<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/title_zhoubian"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/main_periphery" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginLeft="10dp"
            android:text="周边动态"
            android:textColor="@color/text_cl"
            android:textSize="15sp" />


    </LinearLayout>


    <com.onemeter.view.XListView
        android:id="@+id/activity_zhou_bian_dong_tai_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_zhoubian"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:divider="@color/bg_gray_01"
        android:dividerHeight="10dp"
        android:scrollbars="none" />

</RelativeLayout>