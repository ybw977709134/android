<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/guide_img_two"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@mipmap/guide_img2" />

    <TextView
        android:id="@+id/guide_text_title_02"
        android:layout_below="@+id/guide_img_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="玩转·微活动"
        android:textColor="@color/text_cl"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/guide_text_two"
        android:layout_below="@+id/guide_text_title_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="多样模板  自由组合  语音叠加"
        android:layout_centerHorizontal="true"
        android:textColor="@color/text_cl"
        android:textSize="18sp"/>


</RelativeLayout>