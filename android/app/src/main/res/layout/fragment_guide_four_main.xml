<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/guide_img_four"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@mipmap/guide_img4" />

    <TextView
        android:id="@+id/guide_text_title_04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_img_four"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="重说·微配音"
        android:textColor="@color/text_cl"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/guide_text_four"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/guide_text_title_04"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="趣味配音  语种多选  秒变大咖"
        android:textColor="@color/text_cl"
        android:textSize="18sp" />


</RelativeLayout>