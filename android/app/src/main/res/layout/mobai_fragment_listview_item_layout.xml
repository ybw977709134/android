<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f9faf9"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"
    >

   <View
       android:id="@+id/changjing_view_01"
       android:layout_width="match_parent"
       android:layout_height="1dp"
       android:background="#e7ebee"/>
    <RelativeLayout
        android:layout_below="@+id/changjing_view_01"
        android:id="@+id/mabai_fragment_listview_item_layout"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/item_selector">
        <LinearLayout
            android:id="@+id/mabai_fragment_listview_item_img_rel"
            android:layout_width="101dp"
            android:layout_height="112dp"
            android:background="@drawable/border">

        <ImageView
            android:id="@+id/mabai_fragment_listview_item_img"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@mipmap/a2"/>
        </LinearLayout>
        <TextView
            android:id="@+id/mabai_fragment_listview_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/mabai_fragment_listview_item_img_rel"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/mabai_fragment_listview_item_img_rel"
            android:text="一米微秀"
            android:textColor="@color/text_cl"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/mabai_fragment_listview_item_title_sm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/mabai_fragment_listview_item_title"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@+id/mabai_fragment_listview_item_img_rel"
            android:text="一米微秀,H5引爆教育020一米微秀,H5引爆教育020一米微秀,H5引爆教育020"
            android:textColor="#737373"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/mabai_fragment_listview_item_time"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="bottom"
            android:layout_alignBottom="@+id/mabai_fragment_listview_item_img_rel"
            android:layout_toRightOf="@+id/mabai_fragment_listview_item_img_rel"
            android:text="1016-01-15"
            android:layout_marginLeft="10dp"
            android:textColor="#737373"
            android:textSize="12sp" />



    </RelativeLayout>
    <View
        android:id="@+id/changjing_view_02"
        android:layout_below="@+id/mabai_fragment_listview_item_layout"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e7ebee"/>

    <ImageButton
        android:id="@+id/mabai_fragment_listview_item_huodong_baoming"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_above="@+id/changjing_view_02"
        android:src="@mipmap/diandiandian"
        android:background="@null"
        android:gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingRight="15dp"
        />


</RelativeLayout>