<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/huise"
                android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

        </FrameLayout>


        <LinearLayout
            android:id="@+id/layout_main"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:background="@color/bg_White"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/rb1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="50dp">

                <ImageView
                    android:id="@+id/rb1_img"
                    android:layout_width="20dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="2dp"
                    android:src="@mipmap/changjing_2"/>

                <TextView
                    android:id="@+id/rb1_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="场景"
                    android:textColor="@color/menu_text"
                    android:textSize="13sp"/>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/rb3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|right"
                android:orientation="vertical"
                android:paddingRight="50dp">

                <ImageView
                    android:id="@+id/rb3_img"
                    android:layout_width="23dp"
                    android:layout_height="26dp"
                    android:layout_marginRight="3dp"
                    android:src="@mipmap/my_2"/>

                <TextView
                    android:id="@+id/rb3_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:textColor="@color/menu_text"
                    android:textSize="13sp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/rb2_lyout"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/linyout"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/rb2"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@mipmap/home_2"/>

    </LinearLayout>

</RelativeLayout>